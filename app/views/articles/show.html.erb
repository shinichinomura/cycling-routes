<% content_for :title do %><%= @article.title %><% end %>

<% content_for :og_description do %><%= @article.description %><% end %>
<% content_for :og_image do %><%= @article.photo %><% end %>

<h1><%= @article.title %></h1>

<div id="MainContent">
  <div class="destinations">
    <% @article.destinations.each do |dest| %>
      <div class="destination">
        <div class="photo" style="background-image: url('<%= dest.photo %>');"></div>
        <h2><%= link_to dest.name, destination_path(dest) %></h2>
        <%= simple_format dest.short_description.gsub(/[\r\n]/, '') %>
        <p class="more"><%= link_to destination_path(dest) do %><i class="fa fa-caret-right" aria-hidden="true"></i> 続きを読む<% end %></p>
      </div>
    <% end %>
  </div>

  <%= render partial: 'shared_partials/social_buttons' %>
</div>
